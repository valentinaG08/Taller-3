<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#F4F4F4"
    android:padding="30dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Registro"
        android:textColor="#5433C0"
        android:textSize="35dp"
        android:textStyle="normal"
        tools:fontFamily="@font/amaranth" />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nombre"
        android:padding="1dp"
        android:textColorHint="#A6A6A6"
        android:background="#FFFFFF"
        android:layout_below="@id/title"
        android:layout_marginBottom="18dp"/>

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Apellido"
        android:padding="10dp"
        android:textColorHint="#A6A6A6"
        android:background="#FFFFFF"
        android:layout_below="@id/etFirstName"
        android:layout_marginBottom="18dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Correo electrónico"
        android:padding="10dp"
        android:textColorHint="#A6A6A6"
        android:background="#FFFFFF"
        android:inputType="textEmailAddress"
        android:layout_below="@id/etLastName"
        android:layout_marginBottom="18dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Contraseña"
        android:padding="10dp"
        android:textColorHint="#A6A6A6"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:layout_below="@id/etEmail"
        android:layout_marginBottom="18dp"/>

    <EditText
        android:id="@+id/etIdentificationNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/etPassword"
        android:hint="Número de identificación"
        android:textColorHint="#A6A6A6"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="18dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etLatitude"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Latitud"
        android:textColorHint="#A6A6A6"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_below="@id/etIdentificationNumber"
        android:layout_marginBottom="18dp"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etLongitude"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Longitud"
        android:textColorHint="#A6A6A6"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_below="@id/etLatitude"
        android:layout_marginBottom="18dp"
        android:inputType="numberDecimal"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_below="@id/etLongitude"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="#5A5165"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar imagen de perfil"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_button"
        android:textColor="#5A5165"
        android:textSize="20sp"
        android:layout_below="@id/btnRegister"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/ivSelectedImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/btnSelectImage"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"/>

</RelativeLayout>
